<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Manage your event and keep track of event supplies"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/mainTitle2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Create an event now or view all events"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/createEventButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Create an event"
        android:textSize="15dp"
        android:layout_gravity="center"/>
    />

    <Button
        android:id="@+id/eventListButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="View all events"
        android:textSize="15dp"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="260dp"
        android:src="@drawable/party"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        style="@style/imgView"/>

    <TextView
        android:id="@+id/group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/group_info"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_gravity="center"/>

</LinearLayout>