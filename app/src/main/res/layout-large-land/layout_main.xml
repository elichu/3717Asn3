<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Manage your event and keep track of event supplies"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_weight="0.04" />

    <TextView
        android:id="@+id/mainTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.07"
        android:text="Create an event now or view all events"
        android:textAlignment="center"
        android:textSize="40dp" />

    <Button
        android:id="@+id/createEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Create an event"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_weight="0.08" />
    />

    <Button
        android:id="@+id/eventListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="View all events"
        android:textSize="40dp"

        android:layout_gravity="center"
        android:layout_weight="0.12" />

    <TextView
        android:id="@+id/group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/group_info"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_gravity="center"/>
</LinearLayout>